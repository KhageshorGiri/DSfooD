@model ProjectFirst.Models.Deliveryman

@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("Create", "Deliverymen"))
{
    <h2>Create</h2>

    <h4>Deliveryman</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">DeliverymanName</label>
                    <input name="DeliverymanName" class="form-control" />
