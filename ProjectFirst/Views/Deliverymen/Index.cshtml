@model IEnumerable<ProjectFirst.Models.Deliveryman>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeliverymanName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CitizenshipNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeliverymanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CitizenshipNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeliverymansID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeliverymansID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeliverymansID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
