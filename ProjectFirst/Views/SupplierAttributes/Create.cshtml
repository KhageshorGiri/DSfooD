@model ProjectFirst.Models.SupplierAttribute

@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("Create", "SupplierAttributes")) {
<h2>Create</h2>

<h4>SupplierAttribute</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">TotalAmount</label>
                <input name="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">PaidAmount</label>
                <input name="PaidAmount" class="form-control" />
                <span asp-validation-for="PaidAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">SuppilerID</label>
                <select asp-for="SuppilerID" class="form-control" asp-items="ViewBag.SuppilerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
